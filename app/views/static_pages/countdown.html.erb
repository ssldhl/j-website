<div class="special-page container">

    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="center-box">
                <h1>COMING SOON</h1>

                <!-- Countdown -->
                <div id="countdown">
                    <div class="countdown-widget" id="countdown-widget" data-time="<%=@estimatedTime%>"></div>
                </div>
                <!-- /Countdown -->

                <hr />

                <div class="row">
                    <div class="col-md-6 text-left">
                        <h2>Let me know <strong>when</strong> the site is done</h2>

                        <%=form_tag({controller: "static_pages", action: "emailCampaign"}, method: "posts", class: "input-group", id:"countdownForm") do %>
                            <%= text_field_tag 'email', nil, placeholder: 'E-mail Address', type:'email', required:'true', class: 'form-control' %>
                            <span class="input-group-btn">
                                <%= button_tag(type: "submit", class: "btn btn-primary") do %>
                                       <i class="fa fa-search"></i>
                                <% end %>
							</span>
                        <% end %>
                        <p class="font300">Type your best E-mail Address</p>

                    </div>
                    <div class="col-md-6 text-left">
                        <h2>Some additional <strong>Info</strong></h2>

                        <p>We're not <strong>quite</strong> there yet - <strong>but we're getting there!</strong> - and we <strong>really</strong> want you to know when we’re ready.</p>
                    </div>
                </div>

                <hr />

                <div class="row text-left">
                    <div class="col-md-12">

                        <div class="progress-bars">
                            <div class="progress-label">
                                <span>Conception</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-primary" data-appear-progress-animation="70%">
                                    <span class="progress-bar-tooltip">70%</span>
                                </div>
                            </div>
                            <div class="progress-label">
                                <span>Design</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-primary" data-appear-progress-animation="60%" data-appear-animation-delay="100">
                                    <span class="progress-bar-tooltip">60%</span>
                                </div>
                            </div>
                            <div class="progress-label">
                                <span>Coding</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-primary" data-appear-progress-animation="62%" data-appear-animation-delay="200">
                                    <span class="progress-bar-tooltip">62%</span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

</div>


<section id="slider" class="nomargin-top fixed full-screen" data-autoplay="9000"><!-- data-autoplay = 'false' or miliseconds. Eg.: 5s = '5000' -->
    <ul class="slides-container">
        <li>
            <span class="overlay"></span>
            <div style="background-image: url(<%= asset_path 'covers/cover_1.jpg' %>)" class="fullscreen-img"></div>
        </li>
        <li>
            <span class="overlay"></span>
            <div style="background-image: url(<%= asset_path 'covers/cover_2.jpg' %>);" class="fullscreen-img"></div>
        </li>
        <li>
            <span class="overlay"></span>
            <div style="background-image: url(<%= asset_path 'covers/cover_3.jpg' %>);" class="fullscreen-img"></div>
        </li>
        <li>
            <span class="overlay"></span>
            <div style="background-image: url(<%= asset_path 'covers/cover_4.jpg' %>);" class="fullscreen-img"></div>
        </li>
    </ul>
</section>

<!-- NEWSLETTER MODAL -->
<div class="modal fade contactModal" id="newsletterModal" tabindex="-1" role="dialog" aria-labelledby="myNewsletterLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="myNewsletterLabel"><i class="fa fa-envelope-o"></i> <span class="font600">Subscribed</span></h4>
            </div>

            <div class="modal-body">

                <p>
                    Thank you for your subscription!
                </p>

            </div>

            <div class="modal-footer">
                <button class="btn btn-default btn-sm fullwidth" data-dismiss="modal">OK, CLOSE</button>
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<!-- /NEWSLETTER MODAL -->