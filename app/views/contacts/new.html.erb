<% provide(:title, 'Contact') %>
<header id="page-title" class="nopadding">
    <div id="gmap"><!-- google map --></div>
</header>
<section id="contact" class="container">
    <div class="row">
        <!-- FORM -->
        <div  class="col-md-8">

            <h2>Drop us a line or just say <strong><em>Hello!</em></strong></h2>

            <%=form_for(@contact, html:{class: "white-row", id:"contactForm", novalidate:'novalidate'}, remote:true) do |f|%>
                <%= render 'shared/error_messages', object: f.object %>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-6">
                            <label>Full Name *</label>
                            <%= f.text_field :name, required:'true', class: 'form-control', id:"name", maxlength:'100', :data=>{:'msg-required'=>"Please enter your name."} %>
                        </div>
                        <div class="col-md-6">
                            <label>E-mail Address *</label>
                            <%= f.email_field :email, required:'true', class: 'form-control', id:"email", maxlength:'100', :data=>{:'msg-required'=>"Please enter your email address.", :'msg-email'=>'Please enter a valid email address.'} %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label>Subject *</label>
                            <%= f.text_field :subject, required:'true', class: 'form-control', id:"subject", maxlength:'100', :data=>{:'msg-required'=>"Please enter the subject."} %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label>Message *</label>
                            <%= f.text_area :message, required:'true', class: 'form-control', id:"message",rows:'10', maxlength:'5000', :data=>{:'msg-required'=>"Please enter your message."} %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <%= f.submit 'Send Message', class:'btn btn-primary btn-lg', data:{disable_with: 'Loading...'} %>
                    </div>
                </div>
            <%end%>
        </div>
        <!-- /FORM -->


        <!-- INFO -->
        <div class="col-md-4">

            <h2>Visit Us</h2>
            <p>
                We are located in one of the cleanest city of Nepal. Feel free to visit us whenever you are free.
            </p>
            <div class="divider half-margins"><!-- divider -->
                <i class="fa fa-star"></i>
            </div>
            <p>
                <span class="block"><strong><i class="fa fa-map-marker"></i> Address:</strong> Parijat Marg, Hetauda, Makawanpur, Nepal</span>
                <span class="block"><strong><i class="fa fa-phone"></i> Phone:</strong>977-9806855468</span>
                <span class="block"><strong><i class="fa fa-envelope"></i> Email:</strong><%=link_to "info@jhupro.com", "mailto:info@jhupro.com"%></span>
            </p>
            <div class="divider half-margins"><!-- divider -->
                <i class="fa fa-star"></i>
            </div>
            <h4 class="font300">Business Hours</h4>
            <p>
                <span class="block"><strong>Sunday - Friday:</strong> 10am to 5pm</span>
                <span class="block"><strong>Saturday:</strong> Closed</span>
            </p>
        </div>
        <!-- /INFO -->
    </div>
</section>

<!-- /WRAPPER -->


<div class="modal fade contactModal" id="newsletterModal" tabindex="-1" role="dialog" aria-labelledby="myNewsletterLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4 class="modal-title" id="myNewsletterLabel"><i class="fa fa-envelope-o"></i> <span class="font600">Contact</span></h4>
            </div>

            <div class="modal-body">

                <p>
                    Thank you for contacting us!
                </p>

            </div>

            <div class="modal-footer">
                <button class="btn btn-default btn-sm fullwidth" data-dismiss="modal">OK, CLOSE</button>
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

